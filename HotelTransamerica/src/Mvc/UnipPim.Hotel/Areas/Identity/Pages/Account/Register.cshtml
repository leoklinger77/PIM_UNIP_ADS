@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}



<div class="container">
    <br />

    <h1 class="text-center">@ViewData["Title"]</h1>
    <div>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 class="text-center">Criar uma nova conta.</h4>
            <hr />
            <div asp-validation-summary="All" class=" text-danger"></div>
            <div class="row g-3 justify-content-center">
                <div class="col-10">
                    <label asp-for="Input.NomeCompleto"></label>
                    <input asp-for="Input.NomeCompleto" class="form-control" />
                    <span asp-validation-for="Input.NomeCompleto" class="text-danger"></span>
                </div>
                <div class="col-md-5">
                    <label asp-for="Input.Cpf">CPF</label>
                    <input asp-for="Input.Cpf" class="form-control" />
                    <span asp-validation-for="Input.Cpf" class="text-danger"></span>
                </div>
                <div class="col-md-5">
                    <label asp-for="Input.Nascimento"></label>
                    <input asp-for="Input.Nascimento" class="form-control" />
                    <span asp-validation-for="Input.Nascimento" class="text-danger"></span>
                </div>
                <div class="col-10">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="col-10">
                    <label asp-for="Input.Celular"></label>
                    <input asp-for="Input.Celular" class="form-control" />
                    <span asp-validation-for="Input.Celular" class="text-danger"></span>
                </div>
                <div class="col-md-5">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="col-md-5">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <br />
                <button type="submit" class="col-md-10 btn btn-success">Registrar</button>
            </div>
                <br />
        </form>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
