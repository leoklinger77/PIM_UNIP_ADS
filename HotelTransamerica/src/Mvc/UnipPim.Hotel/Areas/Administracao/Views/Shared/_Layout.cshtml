<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Projeto do PIM Unip 2021 - Curso Analise e Desenvolvimento de Sistema">
    <meta name="author" content="Leandro Klinger, Andre Mendes, Talita, Sabrina, Maria Eduarda">
    <meta name="generator" content="Hugo 0.88.1">
    <title>@ViewData["Title"] - UnipPim.Hotel</title>

    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <link href="~/css/site.css" rel="stylesheet">
</head>
<body>   
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-action="Index" asp-controller="Home" asp-area="">Hotel TransAmerica</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-action="Index" asp-controller="Home" asp-area="">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Home" asp-area="Administracao">Administração</a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Pesquisar" aria-label="Pesquisar">
                        <button class="btn btn-outline-success" type="submit">Pesquisar</button>
                    </form>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">

                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-action="Index" asp-controller="Home" asp-area="Administracao">
                                <span data-feather="home"></span>
                                Dashboard
                            </a>
                        </li>

                        @*<li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="users"></span>
                                Caixa
                            </a>
                        </li>*@

                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Funcionario" asp-area="Administracao">
                                <span data-feather="file"></span>
                                Funcionarios
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="GrupoFuncionario" asp-area="Administracao">
                                <span data-feather="users"></span>
                                Grupo de Usuarios
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Cargo" asp-area="Administracao">
                                <span data-feather="shopping-cart"></span>
                                Cargo
                            </a>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="users"></span>
                                Hospedes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="bar-chart-2"></span>
                                Reservas
                            </a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Anuncio" asp-area="Administracao">
                                <span data-feather="layers"></span>
                                Anuncios
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Quarto" asp-area="Administracao">
                                <span data-feather="layers"></span>
                                Quartos
                            </a>
                        </li>

                        @*<li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="layers"></span>
                                Produtos
                            </a>
                        </li>*@
                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>Relatórios</span>
                        <a class="link-secondary" href="#" aria-label="Add a new report">
                            <span data-feather="plus-circle"></span>
                        </a>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="file-text"></span>
                                Quartos disponiveis
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="file-text"></span>
                                Produtos
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="file-text"></span>
                                Receita
                            </a>
                        </li>



                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
            <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; @DateTime.Now.Year - Hotel TransAmerica - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>


    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
