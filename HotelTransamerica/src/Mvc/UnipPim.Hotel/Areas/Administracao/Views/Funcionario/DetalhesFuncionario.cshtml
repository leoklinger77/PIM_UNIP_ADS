@model FuncionarioViewModel

@{
    ViewData["Title"] = "Detalhes Funcionario: " + Model.NomeCompleto;
}

<h1>@ViewData["Title"]</h1>

<div>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeCompleto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeCompleto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nascimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nascimento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cargo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cargo.Nome)
        </dd>        
    </dl>
</div>
<div>
    <a class="btn btn-outline-info" asp-action="EditarFuncionario" asp-route-id="@Model.Id">Editar</a> |
    <a class="btn btn-outline-info" asp-action="Index">Voltar para lista</a>
</div>
