@model GrupoFuncionarioViewModel

@{
    <br />
    ViewData["Title"] = "Novo Grupo";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NovoGrupo">
            <vc:summary></vc:summary>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Administração</label>
                <select asp-for="Home" class="form-select">
                    <option value="Home">Visualizar</option>
                </select>
            </div>

            <div class="form-group">
                <label>Funcionário</label>
                <select asp-for="Funcionario" class="form-select">
                    <option value="Home">Visualizar</option>
                    <option value="Novo">Criar</option>
                    <option value="Editar">Editar</option>
                    <option value="Detalhes">Detalhes</option>
                    <option value="Deletar">Deletar</option>
                </select>
            </div>
            <div class="form-group">
                <label>Cargo</label>
                <select asp-for="Cargo" class="form-select">
                    <option value="Home">Visualizar</option>
                    <option value="Novo">Criar</option>
                    <option value="Editar">Editar</option>
                    <option value="Detalhes">Detalhes</option>
                    <option value="Deletar">Deletar</option>
                </select>
            </div>
            <div class="form-group">
                <label>Hóspede</label>
                <select asp-for="Hospede" class="form-select">

                    <option value="Home">Visualizar</option>
                    <option value="Novo">Criar</option>
                    <option value="Editar">Editar</option>
                    <option value="Detalhes">Detalhes</option>
                    <option value="Deletar">Deletar</option>
                </select>
            </div>


            <div class="form-group">
                <label>Produto</label>
                <select asp-for="Produto" class="form-select">

                    <option value="Home">Visualizar</option>
                    <option value="Novo">Criar</option>
                    <option value="Editar">Editar</option>
                    <option value="Detalhes">Detalhes</option>
                    <option value="Deletar">Deletar</option>
                </select>
            </div>

             <div class="form-group">
                <label>Categoria</label>
                <select asp-for="Categoria" class="form-select">

                    <option value="Home">Visualizar</option>
                    <option value="Novo">Criar</option>
                    <option value="Editar">Editar</option>
                    <option value="Detalhes">Detalhes</option>
                    <option value="Deletar">Deletar</option>
                </select>
            </div>

             <div class="form-group">
                <label>Quarto</label>
                <select asp-for="Quarto" class="form-select">

                    <option value="Home">Visualizar</option>
                    <option value="Novo">Criar</option>
                    <option value="Editar">Editar</option>
                    <option value="Detalhes">Detalhes</option>
                    <option value="Deletar">Deletar</option>
                </select>
            </div>

             <div class="form-group">
                <label>Grupo Funcionario</label>
                <select asp-for="GrupoFuncionario" class="form-select">

                    <option value="Home">Visualizar</option>
                    <option value="Novo">Criar</option>
                    <option value="Editar">Editar</option>
                    <option value="Detalhes">Detalhes</option>
                    <option value="Deletar">Deletar</option>
                </select>
            </div>

            <br />
            <div class="form-group d-grid gap-2 col-12 mx-auto">
                <input type="submit" value="Criar" class="btn btn-success" />
                <a class="btn btn-secondary" asp-action="Index">Voltar para lista</a>
            </div>
        </form>
    </div>
</div>
<br />


