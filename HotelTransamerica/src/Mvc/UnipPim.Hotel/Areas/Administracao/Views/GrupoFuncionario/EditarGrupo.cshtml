@model GrupoFuncionarioViewModel

@{
    ViewData["Title"] = "EditarGrupo";
}

<h1>EditarGrupo</h1>

<h4>GrupoFuncionario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarGrupo">
            <vc:summary></vc:summary>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label>Funcionario</label>
                <select asp-for="Funcionario" asp-items="@(new SelectList(Model.Funcionario))" class="form-select" style="width:200px; height:130px" multiple aria-label="multiple select example">                   
                </select>
            </div>
            <div class="form-group">
                <label>Cargo</label>
                <select asp-for="Cargo" asp-items="@(new SelectList(Model.Cargo))" class="form-select" style="width: 200px; height: 130px" multiple aria-label="multiple select example">                   
                </select>
            </div>
            <div class="form-group">
                <label>Hospede</label>
                <select asp-for="Hospede" asp-items="@(new SelectList(Model.Hospede))" class="form-select" style="width: 200px; height: 130px" multiple aria-label="multiple select example">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

