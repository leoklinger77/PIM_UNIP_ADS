@model GrupoFuncionarioViewModel

@{
    <br />
    ViewData["Title"] = "Editar grupo: " + Model.Nome;
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="EditarGrupo">
            <vc:summary></vc:summary>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <br />
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label>Funcionário</label>
                <select asp-for="Funcionario" asp-items="@(new SelectList(Model.Funcionario))" class="form-select" style="width:340px; height:80px" multiple aria-label="multiple select example">
                </select>
            </div>
            <br />
            <div class="form-group">
                <label>Cargo</label>
                <select asp-for="Cargo" asp-items="@(new SelectList(Model.Cargo))" class="form-select" style="width: 340px; height: 80px" multiple aria-label="multiple select example">
                </select>
            </div>
            <br />
            <div class="form-group">
                <label>Hospede</label>
                <select asp-for="Hospede" asp-items="@(new SelectList(Model.Hospede))" class="form-select" style="width: 340px; height: 80px" multiple aria-label="multiple select example">
                </select>
            </div>
            <br />
            <div class="form-group d-grid gap-2 col-12 mx-auto">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div style="text-align: center">
    <br />
    <a asp-action="Index">Voltar a lista</a>
</div>

