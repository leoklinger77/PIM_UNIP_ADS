@model CargoViewModel

@{
    ViewData["Title"] = "Detalhes do Cargo: " + Model.Nome;
}
<br /> 

<h1>@ViewData["Title"]</h1>

<div>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>        
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="EditarCargo" asp-route-id="@Model.Id">Editar</a> |
    <a class="btn btn-secondary" asp-action="Index">Voltar para lista</a>
</div>
