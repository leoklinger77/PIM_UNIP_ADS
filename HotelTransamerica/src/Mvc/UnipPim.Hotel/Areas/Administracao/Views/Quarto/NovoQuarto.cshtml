@model QuartoViewModel

@{
    <br />
    ViewData["Title"] = "Novo Quarto";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div>
    <form asp-action="NovoQuarto">

        <vc:summary></vc:summary>

        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="NumeroQuarto" class="control-label"></label>
                <input asp-for="NumeroQuarto" class="form-control" />
                <span asp-validation-for="NumeroQuarto" class="text-danger"></span>
            </div>

            <div>
                <div class="form-check form-check-inline">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Televisor" /> @Html.DisplayNameFor(model => model.Televisor)
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Hidromassagem" /> @Html.DisplayNameFor(model => model.Hidromassagem)
                    </label>
                </div>
            </div>

            <hr />
            <div class="row mb-3">
                <label class="form-check form-switch">
                    <input class="form-check-input" asp-for="CamaCasal" /> @Html.DisplayNameFor(model => model.CamaCasal)
                </label>

                <div class="row g-2 col-md-3">
                    <label asp-for="CamaCasalQuantidade" class="control-label">Quantidade</label>
                    <input asp-for="CamaCasalQuantidade" class="form-control" value="0" />
                    <span asp-validation-for="CamaCasalQuantidade" class="text-danger"></span>
                </div>
            </div>

            <hr />
            <div class="row mb-3">
                <label class="form-check form-switch">
                    <input class="form-check-input" asp-for="CamaSolteiro" /> @Html.DisplayNameFor(model => model.CamaSolteiro)
                </label>

                <div class="row g-2 col-md-3">
                    <label asp-for="CamaSolteiroQuantidade" class="control-label"></label>
                    <input asp-for="CamaSolteiroQuantidade" class="form-control" value="0" />
                    <span asp-validation-for="CamaSolteiroQuantidade" class="text-danger"></span>
                </div>
            </div>

            <hr />
            <div class="row mb-3">
                <label class="form-check form-switch">
                    <input class="form-check-input" asp-for="CamaBeliche" /> @Html.DisplayNameFor(model => model.CamaBeliche)
                </label>

                <div class="row g-2 col-md-3">
                    <label asp-for="CamaBelicheQuantidade" class="control-label"></label>
                    <input asp-for="CamaBelicheQuantidade" class="form-control" value="0" />
                    <span asp-validation-for="CamaBelicheQuantidade" class="text-danger"></span>
                </div>
            </div>

            <hr />
            <div class="row mb-3">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Voltar para lista</a>
            </div>
        </div>
    </form>

</div>
 <br />
@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
