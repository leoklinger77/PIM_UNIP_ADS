@model UnipPim.Hotel.Dominio.Models.Quarto

@{
    ViewData["Title"] = "EditarQuarto";
}

<h1>EditarQuarto</h1>

<h4>Quarto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarQuarto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Televisor" /> @Html.DisplayNameFor(model => model.Televisor)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Hidromassagem" /> @Html.DisplayNameFor(model => model.Hidromassagem)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroQuarto" class="control-label"></label>
                <input asp-for="NumeroQuarto" class="form-control" />
                <span asp-validation-for="NumeroQuarto" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ocupado" /> @Html.DisplayNameFor(model => model.Ocupado)
                </label>
            </div>
            <input type="hidden" asp-for="Id" />          

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
