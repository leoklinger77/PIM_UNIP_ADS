@inject UnipPim.Hotel.Dominio.Interfaces.IUser AppUser




@if (AppUser.IsAuthentication())
{
    <div class="nav-item text-nowrap">
        <a class="nav-link px-3" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Olá @AppUser.UserName!</a>
    </div>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Registrar</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
        </li>
    </ul>
}

